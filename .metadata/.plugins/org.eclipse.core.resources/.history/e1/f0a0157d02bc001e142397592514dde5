<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="shopMapper">
  
  	<resultMap type="shop" id="shopResultSet">
	    <result property="shopNum" column="SHOP_NUM"/>
	    <result property="shopId" column="SHOP_ID"/>
	    <result property="shopPw" column="SHOP_PW"/>
	    <result property="shopName" column="SHOP_NAME"/>
	    <result property="contractPeriod" column="CONTRACT_PERIOD"/>  	
	    <result property="shopPhone" column="SHOP_PHONE"/>  	
	    <result property="shopRepresentative" column="SHOP_REPRESENTATIVE"/>  	
	    <result property="shopLogoImageUrl" column="SHOP_LOGO_IMAGE_URL"/>  	
	    <result property="shopStatus" column="SHOP_STATUS"/>  	
	 </resultMap>
	  
	 <!-- 가게 리스트 조회 -->
	<select id="selectListShop" resultMap="shopResultSet">
		   SELECT SHOP_NUM,
		           SHOP_NAME,
		           SHOP_LOGO_IMAGE_URL
		    FROM SHOPS
		    WHERE SHOP_STATUS = 'Y'
		    ORDER BY SHOP_NUM
		    LIMIT 6
	</select>
  
  </mapper>